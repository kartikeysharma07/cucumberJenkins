pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/kartikeysharma07/cucumberJenkins.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Running Build'
                bat 'mvn clean'
            }
        }

        stage('Test') {
            steps {
                echo 'Running test cases'
                bat 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/**/*.xml'
                }
            }
        }
    }
    post {
        failure {
            echo 'One or more tests failed. Failing the pipeline.'
            currentBuild.result = 'FAILED'
        }
    }
}
