pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/kartikeysharma07/cucumberJenkins.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Running Build'
                bat 'mvn clean'
            }
        }

        stage('Test') {
            steps {
                echo 'Running test cases'
                bat 'mvn test'
            }
        }

        stage('Cleanup'){
            steps{
                bat 'echo "" > Readme'
                script {
                    def maxAgeMillis = 2 * 60 * 60 * 1000
                    def currentTimeMillis = System.currentTimeMillis()

                    // Iterate over all builds and delete those older than 12 hours
                    currentBuild.rawBuild.project.getItems().each { job ->
                        job.builds.findAll { build ->
                            build.getTimeInMillis() < currentTimeMillis - maxAgeMillis
                        }.each { build ->
                            build.delete()
                        }
                    }
                }
            }
        }
    }
}
