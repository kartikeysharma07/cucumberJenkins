pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/kartikeysharma07/cucumberJenkins.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Running Build'
                bat 'mvn clean'
            }
        }

        stage('Test') {
            steps {
                echo 'Running test cases'
                bat 'mvn test'
            }
        }

        stage('Cleanup'){
            steps{
                bat 'echo "" > Readme'
            }
        }
    }
}
